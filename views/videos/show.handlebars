<div class="contents-container">
  <div class="video-card">

    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

     <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>

    <div class="video-description">
      <p>{{video.description}} </p>
    </div>

    <a id="edit" href="/videos/{{video._id}}/edit">Edit</a>
    <form action="/videos/{{video._id}}/deletions" method="post">
      <button id="delete" type="submit">
        <p>Delete</p>
      </button>
    </form>
    <div class="comments-container" id="comments-container">
    </div>
    <form class="comment-form" action="/videos/{{video._id}}/comments" method="post">
      <label class="form-label" for="comment">Comment</label>
      <textarea id="comment-input" name="comment"></textarea>

      <button id="submit-comment" type="submit">
        <p>Comment</p>
      </button>
    </form>
  </div>
</div>
