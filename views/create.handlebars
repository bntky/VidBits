    <div class="contents-container">
      <form class="input-form" action="/videos" method="post" >
        <label class="form-label" for="title">Title</label>
        <input id="title-input" name="title" type="text" value="{{video.title}}">
        {{#with video.errors.title as |error|}}
          <span>{{error}}</span>
        {{/with}}

        <label class="form-label" for="description">Description</label>
        <textarea id="description-input" name="description">{{video.description}}</textarea>

        <label class="form-label" for="url">Url</label>
        <input id="url-input" name="url" type="text" value="{{video.url}}">
        {{#with video.errors.url as |error|}}
          <span>{{error}}</span>
        {{/with}}

        <button id="submit-button" type="submit">
          <p>Save a video</p>
        </button>
      </form>
    </div>
